Help="$Help
github_push IMAGE USER/REPO [COMMIT] # requires PMCI/GitHub token in keyring"
github_push()
{
    local image="$1"
    local clone_url="https://github.com/$2.git"
    local token=$(keyring get PMCI GitHub)

    local data
    if [ -n "$3" ]; then
        data="{ \
\"after\": \"$3\", \
\"repository\": { \
\"clone_url\": \"$clone_url\" \
} \
}"
    else
        data="{ \
\"repository\": { \
\"clone_url\": \"$clone_url\" \
} \
}"
    fi

    curl -X POST \
        "https://$REGION-$PROJECT.cloudfunctions.net/listener?image=$image&token=$token" \
        -H "Content-type: application/json" \
        -d "$data"
    echo
}
